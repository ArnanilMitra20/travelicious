<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <br><br>
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
            <div class="valid-feedback">Title Looks Good!</div>
            <div class="invalid-feedback">oops! The title seems to be missing</div>
        </div>
    
        <br>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control" required ></textarea>
            <div class="valid-feedback">Description Looks Good!</div>
            <div class="invalid-feedback">Please enter a short and catchy description</div>
        </div>
        <br>
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Image</lable>
            <input name="listing[image]" type="file" class="form-control" required>
        </div>
        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="Enter Price"  class="form-control" required>
                <div class="valid-feedback">Price is Valid</div>
                <div class="invalid-feedback">Please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                <div class="valid-feedback">Thats a nice place!</div>
                <div class="invalid-feedback">Please enter a valid country</div>
            </div>
        </div>
        <br>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
            <div class="valid-feedback">Thats a lovely location</div>
            <div class="invalid-feedback">Please enter a valid location</div>
        </div>
        <br>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
    <br><br>
    </div>
</div>
