<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <br>
    <h3><b>Listing Details</b></h3>
    <br>
    <div class="card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
        <br>
        <div class="card-body">
            <p class="card-text" style="font-size: 1.5rem;"><b><%= listing.title %></b></p>
        </div>
    </div>
    <ul>
        <li><%= listing.description %></li>
        <li>&#8377;<%= listing.price.toLocaleString("en-IN") %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
    </ul>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 ">Edit</a>
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-4 del-btn">Delete</button>
        </form>
    </div>
    </div>
</div>
